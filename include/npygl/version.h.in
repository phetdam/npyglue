 * @file version.h
 * @author Derek Huang
 * @brief C/C++ header with npyglue version information
 * @copyright MIT License
 */

#ifndef NPYGL_VERSION_H_
#define NPYGL_VERSION_H_

/**
 * npyglue major version number.
 */
#define NPYGL_VERSION_MAJOR @NPYGL_VERSION_MAJOR@

/**
 * npyglue minor version number.
 */
#define NPYGL_VERSION_MINOR @NPYGL_VERSION_MINOR@

/**
 * npyglue patch version number.
 */
#define NPYGL_VERSION_PATCH @NPYGL_VERSION_PATCH@

/**
 * npyglue full version string.
 */
#define NPYGL_VERSION "@NPYGL_VERSION@"

/**
 * npyglue build info.
 *
 * This is `""` for releases but is `"DEV"` or a Git build hash otherwise.
 */
#define NPYGL_BUILD_INFO "@NPYGL_BUILD_INFO@"

#endif  // NPYGL_VERSION_H_
